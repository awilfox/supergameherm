#ifndef __CONFIG_H__
#define __CONFIG_H__

// System is POSIX
#cmakedefine HAVE_POSIX

// System has unistd.h
#cmakedefine HAVE_UNISTD_H

// System has CLOCK_GETTIME
#cmakedefine HAVE_CLOCK_GETTIME

// System has a Mach-style clock (OS X)
#cmakedefine HAVE_MACH_CLOCK_H

// Endianness stuff
#cmakedefine BIG_ENDIAN
#cmakedefine LITTLE_ENDIAN
#cmakedefine HAVE_ENDIAN_H
#cmakedefine HAVE_SYS_ENDIAN_H

#cmakedefine HAVE_BSWAP_16
#cmakedefine HAVE_BSWAP_32

// System has stdbool.h
#cmakedefine HAVE_STDBOOL_H

#if defined(HAVE_STDBOOL_H)
#	include <stdbool.h>
#elif defined(_MSC_VER)
	// this is fine, msvc has intrinsic bool without header
#else
#	error "Your compiler doesn't appear to support the 'bool' type."
#endif

// System has stdint.h
#cmakedefine HAVE_STDINT_H

#if defined(HAVE_STDINT_H)
#	include <stdint.h>
#elif defined(_MSC_VER)
#	include "stdint_msvc.h"
#else
#	error "Your compiler doesn't appear to have C99 support."
#endif

#endif /*__CONFIG_H__*/
