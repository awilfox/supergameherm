#ifndef __CONFIG_H__
#define __CONFIG_H__

// System is POSIX
#cmakedefine HAVE_POSIX

// System has unistd.h
#cmakedefine HAVE_UNISTD_H

// System has CLOCK_GETTIME
#cmakedefine HAVE_CLOCK_GETTIME

// System has a Mach-style clock (OS X)
#cmakedefine HAVE_MACH_CLOCK_H

// Endianness stuff
#cmakedefine BIG_ENDIAN
#cmakedefine LITTLE_ENDIAN
#cmakedefine HAVE_ENDIAN_H
#cmakedefine HAVE_SYS_ENDIAN_H

#cmakedefine HAVE_BSWAP_16
#cmakedefine HAVE_BSWAP_32

// Standard POSIX defines
#ifdef HAVE_CLOCK_GETTIME
#	define _POSIX_C_SOURCE 200809L
#	define _XOPEN_VERSION 700
#endif

// Needed for endian stuff
#if defined(HAVE_ENDIAN_H) || defined(HAVE_SYS_ENDIAN_H)
#	define _BSD_SOURCE
#endif

#endif /*__CONFIG_H__*/
